//Some simple calculations in C//
#include <stdio.h>
int main(void){
    int height = 7;
    int width = 5;
    int perimeter = 0;
    int area = 0;
    
    perimeter = (height * 2) + (width * 2);
    area = height * width;
    
    printf("The perimeter is %d inches\n", perimeter);
    printf("The area is %d inches\n", area);
    
    return 0;
    
}
 
//how to convert ounces to grams//
#include <stdio.h>
int main(void){
    float ounce = 1;
    float gram = 28.3495;
    float ounces_to_grams = 0;

    ounces_to_grams = ounce * gram;
    
    printf("The weight in grams is %f3.2 grams\n", ounces_to_grams);
    
    
    return 0;
    
}
//would be more useful to turn this into a function//
